@page
@model SAJ.Finder.Pages.ApplicationModel
@{
    ViewData["Title"] = "Applications";
}

<div class="text-center">
    <h1 class="display-4">Submit Application</h1>
</div>

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <strong>Success!</strong> @Model.SuccessMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        <strong>Error!</strong> @Model.ErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="mt-3">
    <form method="post" autocomplete="off" spellcheck="false">
        <div class="form-row">
            <div class="form-group col-12">
                <label>Application In JSON Format</label>
                <textarea class="form-control shadow-none" rows="10" asp-for="DocumentInJson"></textarea>
            </div>
        </div>
        <div class="form-row mt-3">
            <div class="form-group col-12">
                <button class="btn btn-outline-primary shadow-none mr-1" asp-page-handler="Submit">Apply</button>
                <button class="btn btn-outline-secondary shadow-none" asp-page-handler="Clear">Reset</button>
            </div>
        </div>
    </form>
</div>