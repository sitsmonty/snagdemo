@page
@model SAJ.Finder.Pages.QuestionsModel
@{
    ViewData["Title"] = "All Questions";
}

<div class="text-center">
    <h1 class="display-4">All Questions With Answers</h1>
</div>

<ul class="list-group mt-5">
    @for (var i = 0; i < Model.Questions.Count; i++)
    {
        if (i % 2 == 0)
        {
            <li class="list-group-item flex-column align-items-start mb-1">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model.Questions[i].QuestionText</h5>
                    <small>@Model.Questions[i].QuestionIdentifier</small>
                </div>
                <p class="mb-1">@Model.Questions[i].AcceptedAnswer</p>
            </li>
        }
        else
        {
            <li class="list-group-item list-group-item-secondary flex-column align-items-start mb-1">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model.Questions[i].QuestionText</h5>
                    <small>@Model.Questions[i].QuestionIdentifier</small>
                </div>
                <p class="mb-1">@Model.Questions[i].AcceptedAnswer</p>
            </li>
        }
    }
</ul>